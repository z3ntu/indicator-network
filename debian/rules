#!/usr/bin/make -f
# -*- makefile -*-
# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

include /usr/share/dpkg/default.mk

export DPKG_GENSYMBOLS_CHECK_LEVEL = 4

ENABLE_TESTS = ON
ifneq (,$(filter $(DEB_HOST_ARCH),arm64 s390x powerpc ppc64el))
        ENABLE_TESTS = OFF
endif
ifneq (,$(filter $(DEB_HOST_ARCH),i386))
	ifeq (Ubuntu,$(DEB_VENDOR))
		ifeq (vivid,$(DEB_DISTRIBUTION))
			ENABLE_TESTS = OFF
		endif
	endif
endif

%:
	dh $@ --parallel --fail-missing --with python3

override_dh_auto_configure:
	dh_auto_configure -- -DENABLE_TESTS=${ENABLE_TESTS} -DCMAKE_BUILD_TYPE=debug

